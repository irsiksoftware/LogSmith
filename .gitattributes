*.flv binary
*.ogv binary
*.wmv binary

#
# Fonts
#

*.ttf binary
*.otf binary
*.eot binary
*.woff binary
*.woff2 binary

#
# Archives and Compressed Files
#

*.zip binary
*.7z binary
*.gz binary
*.rar binary
*.tar binary

#
# Unity Package Files
#

*.unitypackage binary

#
# Native Libraries
#

*.dll binary
*.so binary
*.dylib binary
*.a binary
*.bundle binary

#
# Documentation and Config Files (Force LF)
#

*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.cfg text eol=lf
*.config text eol=lf
*.ini text eol=lf

#
# Project Files (Force LF)
#

*.sln text eol=lf
*.csproj text eol=lf
*.unityproj text eol=lf
*.booproj text eol=lf
*.svd text eol=lf
*.plist text eol=lf
*.properties text eol=lf

#
# Scripts (Force LF except PowerShell)
#

*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

#
# Build Output (Binary)
#

*.apk binary
*.ipa binary
*.app binary
*.exe binary
*.symbols.zip binary

#
# Special Unity Files
#

.collabignore text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
